<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/misol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/raqam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_10"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold|normal" />

        <TextView
            android:id="@+id/raqam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="= !!!"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold|normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        android:hint="Javob:"
        android:maxLength="10"
        android:maxLines="1"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/misol" />


    <Button
        android:id="@+id/checking"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="checking"
        android:textSize="25sp"
        android:backgroundTint="#4002CC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javob:"
            android:textColor="#B0B0B1"
            android:textSize="40sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/barchaJavoblar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="0"
            android:textColor="#B0B0B1"
            android:textSize="40sp"
            android:textStyle="italic" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:text="1"
                android:textSize="35sp"
                android:layout_margin="5dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ikki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="2"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/uch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="3"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/tort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="4"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/besh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="5"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/olti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="6"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/yetti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="7"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/sakkiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="8"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/toqqiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="9"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="-"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/nol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="0"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/chekkasi"
                android:layout_margin="5dp"
                android:textSize="35sp"
                android:text="C"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/backSpace"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        android:src="@drawable/backspace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>